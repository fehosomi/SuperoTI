@model IEnumerable<SuperoTI.Task.DAO.TaskModel>

@{
    ViewBag.Title = "Tarefas";
}

<h2>
    Tarefas
    <a href='@Url.Action("Create")' class="btn btn-primary" style="float: right; margin-top: -5px" data-toggle="tooltip" title="Incluir Novo">
        <span class="glyphicon glyphicon-plus-sign"></span> Novo
    </a>
</h2>
<table class="table">
    <tr>
        <th>
            Título
        </th>
        <th>
            Data Inserção
        </th>
        <th>
            Última Atualização
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusDescription)
            </td>
            <td>
                <a href='@Url.Action("Edit", new { id = item.ID })' class="btn btn-primary" data-toggle="tooltip" title="Editar">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>
                <a href='@Url.Action("Delete", new { id = item.ID })' class="btn btn-primary" data-toggle="tooltip" title="Remover">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
